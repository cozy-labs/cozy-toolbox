<main class="d-flex">
  <.bar fauxton={Couch.fauxton_url(@doctype.db)}>
    &nbsp;
  </.bar>

  <.sidebar instance={@instance} doctypes={@doctypes} current={@doctype.name} />

  <div class="content">
    <table>
      <tr :for={doc <- @docs}>
        <td><a href={~p"/cozy/#{@instance.id}/#{@doctype.name}/#{doc.id}"}>
          <%= doc.id %>
        </a></td>
        <td><%= doc.rev %></td>
      </tr>
    </table>
  </div>
</main>
