<main class="d-flex">
  <.bar />

  <.sidebar instance={@instance} doctypes={@doctypes} />

  <div class="d-flex flex-column align-items-center flex-grow-1 flex-shrink-1">
    <.hero avatar={"//#{@instance.domain}/public/avatar?fallback=initials"} title={@instance.domain} />

    <pre class="m-auto"><code class="language-js">
      <%= Jason.Formatter.pretty_print(@instance.raw_doc) %>
    </code></pre>
  </div>
</main>
